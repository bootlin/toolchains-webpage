            <li>aarch64</li>
            <li>arc</li>
            <li>arm</li>
            <li>bfin</li>
            <li>m68k</li>
            <li>microblaze</li>
            <li>mips32</li>
            <li>mips64</li>
            <li>nios2</li>
            <li>openrisc</li>
            <li>powerpc</li>
            <li>powerpc64</li>
